<%content_for :javascript_after do%>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"/>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>

<script type=text/javascript>
$(window).load(function(){
  $('#main_slide').slick({
    centerMode:true,
    arrows:false,
    autoplay: true,
    autoplaySpeed: 1100,
    fade: true,
  });

    $('#msg').find('h2').fadeIn(2000);;
});
$(function() {
  var h = $(window).height();

  $('#wrap').css('display','none');
  $('#loader-bg ,#loader').height(h).css('display','block');
});

$(window).load(function () { //全ての読み込みが完了したら実行
  $('#loader-bg').delay(900).fadeOut(800);
  $('#loader').delay(600).fadeOut(300);
  $('#wrap').css('display', 'block');
});
</script>
<%end%>

<%if is_root?%>
<div id="loader-bg">
  <div id="loader">
    <%=image_tag("/images/img-loading.gif", :size => "80x80" ,:alt => "Now Loading...")%>
    <p>Now Loading...</p>
  </div>
</div>
<%end%>
<!--loader-bg-->
<div id="home">
<div id="msg">
  <%=image_tag '/images/baloon.gif',:size=>"70x70"%>
  <%=image_tag '/images/top_msg.png'%>
  <%=image_tag '/images/baloon.gif',:size=>"70x70"%>
  <h2 style="color:#C71585;">これから茨城大学で過ごしていくにあたって、サークルでかけがえのない友人を作ってみるのはいかがですか？<br>
  このサイトはそのお手伝いをいたします。</h2>
</div>

  <div id="main_slide">
    <div><%=link_to (image_tag "/images/ibaraki_univ.jpg",{:size => "700x350"}),"http://www.ibaraki.ac.jp/",:target=>["_blank"]%></div>
    <div><%=image_tag "/images/top_onepice.jpg",:size => "700x350"%></div>
    <div><%=image_tag "/images/top_sakura.jpeg",:size => "700x350"%></div>
    <div><%=image_tag "/images/top_umi4.png",:size => "700x350"%></div>


  </div>
<h2>新着情報</h2>
<div class="new">

<%unless @show_info.count < 6%>
<p><%=link_to "and more...",homes_index_show_info_path%></p>
