<%content_for :javascript_after do%>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"/>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>

<script type=text/javascript>
$(window).load(function(){
  $('.slide').slick({
    accessibility: true,
    autoplay: true,
    autoplaySpeed: 900,
    fade: true,
  });
});
</script>
<%end%>

<div id="home">
<div class="slide">
  <div><%=image_tag "/images/home1.jpg",:size => "700x350"%></div>
  <div><%=image_tag "/images/home2.jpg",:size => "700x350"%></div>
</div>
<div class="new">
<h2>新着情報</h2>
<p><%=link_to "and more...",homes_index_show_info_path%></p>
  <%=render 'show_info'%>
</div>

<div class="link">
<ul>
  <li><%=link_to (image_tag '/images/top4.jpg',{:size => '170x130'}),homes_circle_path,{:class=>"button"}%></li>
  <li><%=link_to (image_tag '/images/top_3.jpg',{:size => '170x130'}),neets_index_path,{:class=>"button"}%></li>
</ul>
</div>

</div>
<!--end of home-->
